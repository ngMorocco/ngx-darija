{
  "name": "ngx-darija",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "npm run test-misc && ng test",
    "test-misc": "mocha misc/test/**.spec.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "dev:ssr": "ng run ngx-darija:serve-ssr",
    "serve:ssr": "node dist/ngx-darija/server/main.js",
    "build:ssr": "ng build && ng run ngx-darija:server:production",
    "prerender": "npm run generate-dynamic-routes-file && ng run ngx-darija:prerender --routes-file routes.txt",
    "serve:function": "node ./tools/server.js",
    "serve-prerender": "start-server-and-test serve:function http://localhost:8889/.netlify/functions/playlist prerender",
    "generate-dynamic-routes-file": "node -e 'require(\"./misc/generate-routes-file-for-dynamic-routes.js\").generateDynamicRoutesFile()'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.3",
    "@angular/common": "~11.2.3",
    "@angular/compiler": "~11.2.3",
    "@angular/core": "~11.2.3",
    "@angular/forms": "~11.2.3",
    "@angular/platform-browser": "~11.2.3",
    "@angular/platform-browser-dynamic": "~11.2.3",
    "@angular/platform-server": "~11.2.3",
    "@angular/router": "~11.2.3",
    "@angular/youtube-player": "^11.2.4",
    "@nguniversal/express-engine": "^11.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "express": "^4.15.2",
    "node-fetch": "^2.6.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.2",
    "@angular/cli": "~11.2.2",
    "@angular/compiler-cli": "~11.2.3",
    "@nguniversal/builders": "^11.2.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "fs-extra": "^9.1.0",
    "husky": "5.1.3",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "10.5.4",
    "mocha": "^8.3.2",
    "prettier": "2.2.1",
    "protractor": "~7.0.0",
    "sinon": "^9.2.4",
    "start-server-and-test": "^1.12.0",
    "tailwindcss": "^2.0.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "~4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write"
    ]
  }
}
